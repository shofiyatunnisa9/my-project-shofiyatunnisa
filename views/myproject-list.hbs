<main>
    <h1 style="text-align: center; margin-top: 30px;"> MY PROJECT </h1>

    {{#if user}}
    <div style="width: 80%; margin:  auto; text-align: right;">
        <a href="/myproject-create" class="project_post_button">Create New Project</a>
    </div>
    {{/if}}
    <div id="project-list" class="card myProject_list" style="width: 18rem;">

        {{#each projects}}
        <article>
            <img src="{{this.image}}" class="card-img-top" alt="img-card">
            <div class="card-body">
                <a href="/myproject/{{this.id}}" style="text-decoration: none; color: black;">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                <p style="color: gray;">durasi: {{this.duration}}</p>
                <p class="card-text" style="text-align: justify;">{{this.description}}</p>
                <p>Teknologi: {{this.technologies}}</p>
                {{!-- <p> Techonolgies : {{this.technologies}}</p> --}}
