{{#> layout currentPage = 'MyProject'}}



<!--  My Poject  -->
<main>
    <h1 style="text-align: center; margin-top: 30px;"> MY PROJECT </h1>

    {{#if user}}
    <div style="width: 80%; margin:  auto; text-align: right;">
        <a href="/myproject-create" class="project_post_button">Create New Project</a>
    </div>
    {{/if}}

    <div id="myProject" class="myProject_list">
        {{#each projects}}
        <article>
            <img src="{{this.image}}" alt="myProject_img">
            <h4 class="myProject_item_caption " style="font-weight: bold;">
                {{this.name}}
            </h4>
            <p style="color: gray;">durasi : {{this.durationMonths}}</p>
            <p>{{this.description}}</p>
            <div id="icon_myProject">
                <img src="/img/playstore.png" alt="">
                <img src="/img/android.png" alt="">
                <img src="/img/java.png" alt="">
            </div>
            <p></p>

            {{#if (equal ../user.id this.authorId)}}
            <div class="myProject_buttons">
                <a href="/myproject-edit/{{this.id}}" class="btn btn-black">Edit</a>

            </div>

            <form action="/myproject/{{this.id}}?_method=DELETE" method="post">
                <button onclick="return confirm ('Are you sure you want to delete?')" class="btn btn-black"
                    type="submit">Delete</button>

            </form>

            {{/if}}
    </div>
    {{/each}}
