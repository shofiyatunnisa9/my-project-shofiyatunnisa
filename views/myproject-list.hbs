                    {{/each}} --}}
                    {{!--
                </div> --}}

            </div>
            {{#if (equal ../user.id this.authorId)}}
            <div class="card-body-buttons">
                <a href="/myproject-edit/{{this.id}}" class="btn btn-black ">Edit</a>
                <form id="deleteProject" style="display: inline;" action="/myproject/{{this.id}}?_method=DELETE"
                    method="POST">
                    <button onclick="deleteConfirm(event, this.form)" class="btn btn-black"
                        type="submit">Delete</button>
                </form>
            </div>
            {{/if}}
        </article>
        {{/each}}
    </div>
</main>
