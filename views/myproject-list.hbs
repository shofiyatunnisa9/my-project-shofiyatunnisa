{{#> layout currentPage = 'MyProject'}}



<!--  My Poject  -->
<main>
    <h1 style="text-align: center; margin-top: 30px;"> MY PROJECT </h1>

    {{#if user}}
    <div style="width: 80%; margin:  auto; text-align: right;">
        <a href="/myproject-create" class="project_post_button">Create New Project</a>
    </div>
    {{/if}}
    <div id="project-list" class="card myProject_list" style="width: 18rem;">

        {{#each projects}}
        <article>
            <img src="{{this.image}}" class="card-img-top" alt="img-card">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p style="color: gray;">duration: {{this.duration}}</p>
                <p class="card-text">{{this.description}}</p>
                <div class="tech-icons">
                    {{#each this.technologies}}
                    <img src="/img/{{this}}.png" alt="{{this}}">
                    {{/each}}
                </div>

            </div>
            <div class="card-body d-grid gap-2 d-md-block "
                style="display: flex !important ; text-align: center; !important">
                <a href="/myproject-edit/{{this.id}}" class="btn btn-black">Edit</a>
                <form action="/myproject/{{this.id}}?_method=DELETE" method="POST">
                    <button onclick="return confirm ('Are you sure you want to delete?')" class="btn btn-black"
                        type="submit">Delete</button>

                </form>
            </div>
        </article>
        {{/each}}
    </div>
</main>

{{/layout}}