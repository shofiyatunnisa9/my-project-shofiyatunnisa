{{#> layout currentPage = 'Create Project'}}
<form class="row g-3 create_project_form" id="project-form" action="/myproject-create" method="POST"
    enctype="multipart/form-data">
    <h2 style="text-align: center;">Add New Project</h2>
    <div class="col-12 form_field">
        <label for="name" class="form-label fw-bold">Project Name</label>
        <input name="name" type="text" class="form-control" id="inputNameProject" required>
    </div>
    <div class="col-md-6 form_field ">
        <label for="startDate" class="form-label fw-bold">Start date</label>
        <input name="startDate" type="date" class="form-control" id="startDate" required>
    </div>
    <div class="col-md-6 form_field">
        <label for="endDate" class="form-label fw-bold">End Date</label>
        <input name="endDate" type="date" class="form-control" id="endDate" required>
    </div>

    <div class="col-12 form_field">
        <label for="description" class="form-label fw-bold">Description</label>
        <textarea name="description" type="text" class="form-control" id="description" rows="6" required></textarea>
    </div>
