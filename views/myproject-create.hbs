    <label class="tech option  fw-bold">Technologies</label>
    <div id="technologies" class="tech-options">
        <div class="form-check form-check-inline">
            <input name="technologies" type="checkbox" id="nodejs" value="Node Js">
            <label for="nodejs">Node Js</label>
        </div>
        <div class="form-check form-check-inline">
            <input name="technologies" type="checkbox" id="reactjs" value="React Js"><label for="nodejs">React Js
            </label>
        </div>

        <div class="form-check form-check-inline">
            <input name="technologies" type="checkbox" id="nextjs" value="Next Js">
            <label for="nodejs">Next Js</label>
        </div>
        <div class="form-check form-check-inline">
            <input name="technologies" type="checkbox" id="typescript" value="TypeScript">
            <label for="nodejs">TypeScript</label>
        </div>
    </div>
    <div class="col-12 form_field">
        <label for="image" class="form-label fw-bold">Upload Image</label>
        <input name="image" type="file" class="form-control" id="uploadImage" required>
    </div>
    <div class="col-12 button_container" id="project-button">
        <button onclick="hitungDurasi()" type="submit" class="btn btn-black">Submit</button>
    </div>
</form>

